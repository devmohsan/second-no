<% if (success_msg) { %>
  <div class="fixed top-6 right-6 bg-green-500 text-white px-4 py-2 rounded shadow-md z-50 animate-bounce">
    <%= success_msg %>
  </div>
<% } %>

<% if (error_msg) { %>
  <div class="fixed top-6 right-6 bg-red-500 text-white px-4 py-2 rounded shadow-md z-50 animate-bounce">
    <%= error_msg %>
  </div>
<% } %>

<% if (success_msg || error_msg) { %>
  <script>
    setTimeout(() => {
      const alerts = document.querySelectorAll('.fixed.top-6');
      alerts.forEach(alert => alert.remove());
    }, 4000);
  </script>
<% } %>
