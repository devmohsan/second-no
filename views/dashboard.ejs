<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard | Second Number</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-gray-50 font-sans antialiased">
  <div class="flex h-screen overflow-hidden">
    <%- include('partials/sidebar') %>

    <div class="flex flex-col flex-1 overflow-x-hidden overflow-y-auto">
      <%- include('partials/header') %>

      <main class="flex-1 p-6">
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
          <!-- Total Users Card -->
          <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-500 text-sm font-medium">Total Users</p>
                <h3 class="text-2xl font-bold text-gray-900 mt-1"><%= counts.totalUsers %></h3>
              </div>
              <div class="p-3 rounded-full bg-blue-100 text-blue-600">
                <i class="fas fa-users text-xl"></i>
              </div>
            </div>
            <p class="text-green-600 text-xs mt-2">
              <i class="fas fa-arrow-up mr-1"></i> 5.2% from yesterday
            </p>
          </div>

          <!-- Active Users Card -->
          <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-500 text-sm font-medium">Active Users</p>
                <h3 class="text-2xl font-bold text-gray-900 mt-1"><%= counts.activeUsers %></h3>
              </div>
              <div class="p-3 rounded-full bg-green-100 text-green-600">
                <i class="fas fa-user-check text-xl"></i>
              </div>
            </div>
            <p class="text-green-600 text-xs mt-2">
              <i class="fas fa-arrow-up mr-1"></i> 3.1% from yesterday
            </p>
          </div>

          <!-- Active Numbers Card -->
          <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-500 text-sm font-medium">Active Numbers</p>
                <h3 class="text-2xl font-bold text-gray-900 mt-1"><%= counts.activeNumbers %></h3>
              </div>
              <div class="p-3 rounded-full bg-purple-100 text-purple-600">
                <i class="fas fa-phone-alt text-xl"></i>
              </div>
            </div>
            <p class="text-green-600 text-xs mt-2">
              <i class="fas fa-arrow-up mr-1"></i> 7.8% from yesterday
            </p>
          </div>

          <!-- Today's Users Card -->
          <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-500 text-sm font-medium">This Month Signups</p>
                <h3 class="text-2xl font-bold text-gray-900 mt-1"><%= graphData.MonthlyUsers %></h3>
              </div>
              <div class="p-3 rounded-full bg-yellow-100 text-yellow-600">
                <i class="fas fa-user-plus text-xl"></i>
              </div>
            </div>
            <!-- <p class="text-gray-500 text-xs mt-2">
              Compared to <%= Math.floor(graphData.MonthlyUsers * 0.95) %> Last Month
            </p> -->
          </div>
        </div>

        <!-- Graphs Section -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          <!-- Today's Activity Chart -->
          <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Mothly Activity</h3>
            <canvas id="todayActivityChart" height="250"></canvas>
          </div>

          <!-- Recent Numbers Chart -->
          <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Recent Numbers</h3>
            <canvas id="numbersChart" height="250"></canvas>
          </div>
        </div>
      </main>
    </div>
  </div>

<script>
    // Today's Activity Chart
    const todayCtx = document.getElementById('todayActivityChart').getContext('2d');
    const todayActivityChart = new Chart(todayCtx, {
      type: 'bar',
      data: {
        labels: ['Users', 'Purchases'],
        datasets: [{
          label: 'Today',
          data: [<%= graphData.MonthlyUsers %>, <%= graphData.todayPurchasedNumbers %>],
          backgroundColor: [
            'rgba(59, 130, 246, 0.7)',
            'rgba(139, 92, 246, 0.7)'
          ],
          borderColor: [
            'rgba(59, 130, 246, 1)',
            'rgba(139, 92, 246, 1)'
          ],
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            display: false
          }
        },
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });

    // Numbers Status Doughnut Chart
    const numbersCtx = document.getElementById('numbersChart').getContext('2d');
    const numbersChart = new Chart(numbersCtx, {
      type: 'doughnut',
      data: {
        labels: ['Active', 'Inactive', 'Pending', 'Released'],
        datasets: [{
          data: [
            <%= graphData.numberStatus.active || 0 %>,
            <%= graphData.numberStatus.inactive || 0 %>,
            <%= graphData.numberStatus.pending || 0 %>,
            <%= graphData.numberStatus.released || 0 %>
          ],
          backgroundColor: [
            'rgba(16, 185, 129, 0.7)',
            'rgba(239, 68, 68, 0.7)',
            'rgba(234, 179, 8, 0.7)',
            'rgba(59, 130, 246, 0.7)'
          ],
          borderColor: [
            'rgba(16, 185, 129, 1)',
            'rgba(239, 68, 68, 1)',
            'rgba(234, 179, 8, 1)',
            'rgba(59, 130, 246, 1)'
          ],
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            position: 'right',
          }
        }
      }
    });
</script>
</body>

</html>